# Path to the SQLite database file (tilde expanded)
HVAULT_DB_PATH=~/.hae-vault/health.db

# Port for the HTTP ingest server (hvault serve)
HVAULT_PORT=4242

# Bearer token required on POST /api/ingest â€” leave blank to disable auth
# Generate one with: openssl rand -hex 32
HVAULT_TOKEN=

# Directory to watch for new HAE export files (hvault watch)
HVAULT_WATCH_DIR=~/Downloads

# How often to poll the watch directory, in seconds
HVAULT_WATCH_INTERVAL=60

# Default target/device label applied to imported data
HVAULT_TARGET=default

# Override the .env file location (default: .env in current directory)
HVAULT_ENV_FILE=
